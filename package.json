{
    "name": "nihongo-admin",
    "version": "1.0.0",
    "scripts": {
      "heroku-postbuild": "concurrently --kill-others-on-fail \"yarn global add react-app-rewired\" \"yarn client-build\" \"yarn server-build\"",
      "client-build": "cd client && yarn && yarn build",
      "server-build": "cd server && yarn",
      "server-dev": "cd server && yarn dev",
      "server-prod": "cd server && yarn start",
      "dev": "yarn server-dev",
      "prod": "yarn server-prod"
    },
    "dependencies": {
      "concurrently": "^6.2.0",
      "react-app-rewired": "^2.1.5"
    }
  }
