{
    "name": "nihongo-admin",
    "version": "1.0.0",
    "scripts": {
      "client-build": "cd client && yarn && yarn build",
      "server-dev": "cd server && yarn && yarn dev",
      "server-prod": "cd server && yarn && yarn start",
      "dev": "concurrently --kill-others-on-fail \"yarn client-build\" \"yarn server-dev\"",
      "prod": "concurrently --kill-others-on-fail \"yarn client-build\" \"yarn server-prod\""
    },
    "devDependencies": {
      "concurrently": "^6.2.0"
    }
  }
