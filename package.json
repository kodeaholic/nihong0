{
    "name": "nihongo-admin",
    "version": "1.0.0",
    "scripts": {
      "heroku-postbuild": "concurrently --kill-others-on-fail \"yarn server-build\" \"yarn client-build\"",
      "client-build": "cd client && yarn install && yarn build",
      "server-build": "cd server && yarn install",
      "server-dev": "cd server && yarn dev",
      "server-prod": "cd server && yarn start",
      "dev": "yarn server-dev",
      "prod": "yarn server-prod"
    },
    "dependencies": {
      "concurrently": "^6.2.0"
    },
    "engines": {
      "node" : ">=12.13.0"
    },
    "engineStrict" : true
  }
